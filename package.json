{
  "name": "learn-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build": "ng build main-course",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev:ssr": "ng run main-course:serve-ssr",
    "serve:ssr": "node dist/main-course/server/main.js",
    "build:ssr": "ng build main-course && ng run main-course:server",
    "prerender": "ng run main-course:prerender",
    "start:main-course": "ng run main-course:serve",
    "start:animation": "ng run animation:serve",
    "start:standalone-components": "ng run standalone-components:serve",
    "start:signals": "ng run signals:serve",
    "check-libs-updates": "ncu",
    "libs:update:patch": "ncu -u --target patch && npm i",
    "libs:update:minor": "ncu -u --target minor && npm i",
    "libs:update:major": "ncu -u && npm i"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.2",
    "@angular/common": "^17.1.2",
    "@angular/compiler": "^17.1.2",
    "@angular/core": "^17.1.2",
    "@angular/forms": "^17.1.2",
    "@angular/platform-browser": "^17.1.2",
    "@angular/platform-browser-dynamic": "^17.1.2",
    "@angular/platform-server": "^17.1.2",
    "@angular/router": "^17.1.2",
    "@angular/ssr": "^17.1.2",
    "@ngrx/effects": "^17.1.0",
    "@ngrx/store": "^17.1.0",
    "bootstrap": "^3.4.1",
    "express": "^4.18.2",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular/cli": "^17.1.2",
    "@angular/compiler-cli": "^17.1.2",
    "@ngrx/router-store": "^17.1.0",
    "@ngrx/store-devtools": "^17.1.0",
    "@types/express": "^4.17.21",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.11.16",
    "browser-sync": "^3.0.2",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-check-updates": "^16.14.14",
    "typescript": "^5.3.3"
  }
}
